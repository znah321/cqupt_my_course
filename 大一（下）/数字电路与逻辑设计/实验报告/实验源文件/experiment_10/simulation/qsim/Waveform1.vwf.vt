input [3:0] Y;
input sampler_rx;

reg [3:0] F_expected;
reg [3:0] Y_expected;

reg [3:0] F_prev;
reg [3:0] Y_prev;

reg [3:0] F_expected_prev;
reg [3:0] Y_expected_prev;

reg [3:0] last_F_exp;
reg [3:0] last_Y_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	F_prev = F;
	Y_prev = Y;
end

// update expected /o prevs

always @(trigger)
begin
	F_expected_prev = F_expected;
	Y_expected_prev = Y_expected;
end


// expected F[ 3 ]
initial
begin
	F_expected[3] = 1'bX;
end 
// expected F[ 2 ]
